# Backend environment variables
# Copy to .env and fill values (DO NOT commit real secrets)

# Server
PORT=5000
NODE_ENV=development

# Database (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=bank_db
DB_CONN_LIMIT=10

# JWT
JWT_SECRET=replace_this_with_a_strong_random_value

# Bcrypt
BCRYPT_ROUNDS=10

# Frontend URL for CORS (set to your deployed frontend origin in production)
FRONTEND_URL=http://localhost:5173
